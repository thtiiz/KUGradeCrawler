{
  "name": "KUGradeCrawler",
  "version": "1.0",
  "description": "Automation fetch KU Grade",
  "permissions": ["storage", "https://stdregis.ku.ac.th/*", "webRequest", "webRequestBlocking", "alarms"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon_16.png",
      "32": "assets/icon_32.png",
      "64": "assets/icon_64.png",
      "128": "assets/icon_128.png"
    }
  },
  "icons": {
    "16": "assets/icon_16.png",
    "32": "assets/icon_32.png",
    "64": "assets/icon_64.png",
    "128": "assets/icon_128.png"
  },
  "manifest_version": 2
}
